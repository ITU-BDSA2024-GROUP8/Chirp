@page "/{author}"
@using Chirp.Infrastructure.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<Author> UserManager

@model Chirp.Web.Pages.UserTimelineModel
    
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

<div>
    <h2> @routeName's Timeline </h2>

    <partial name="_CheepBoxPartial" model="new Chirp.Web.Pages.CheepBoxPartialModel()" />

    <partial name="_HejPartial"/>

    @{ await Html.RenderPartialAsync("_CheepCreationPartial", Chirp.Web.Pages.CheepBoxPartialModel); }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp.ToString("MM/dd/yy H:mm:ss")</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
