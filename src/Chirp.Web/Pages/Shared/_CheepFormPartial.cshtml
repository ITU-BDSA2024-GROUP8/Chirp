@model Chirp.Web.Pages.Models.CheepFormModel

@if (User.Identity!.IsAuthenticated)
{
    var author = await UserManager.GetUserAsync(User);

    <div class="cheepbox">
        <h3>What's on your mind @(author!.Name)?</h3>
        <form method="post">
            <div>
                <input style="float: left" type="text" asp-for="Message">
                <input type="submit" value="Share">
            </div>
            <span asp-validation-for="Message" class="text-danger"></span>
        </form>
    </div>
}