<ul id="messagelist" class="cheeps">
    @foreach (var cheep in Model.Cheeps)
    {
        <li>
            <div>
                <strong>
                    <a href="/@cheep.Author">@cheep.Author</a>
                </strong>

                @if (User.Identity!.IsAuthenticated)
                {
                    if (true)
                    {
                        <form method="post" asp-page-handler="FollowAuthor" style="display:inline;">
                            <input type="hidden" name="targetAuthorName" value="@cheep.Author" />
                            <button type="submit" class="link-style-button">[Follow]</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="UnfollowAuthor" style="display:inline;">
                            <input type="hidden" name="targetAuthorName" value="@cheep.Author" />
                            <button type="submit" class="link-style-button">[Unfollow]</button>
                        </form>
                    }
                }

                <p style="display:inline;">
                    @cheep.Message
                    <span>
                        <small>&mdash; @cheep.Timestamp.ToString("MM/dd/yy H:mm:ss")</small>
                    </span>
                </p>
            </div>
        </li>
    }
</ul>