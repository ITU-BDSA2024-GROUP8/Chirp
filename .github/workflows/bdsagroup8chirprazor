# Docs for the Azure Web Apps Deploy action: https://github.com/Azure/webapps-deploy
# More GitHub Actions for Azure: https://github.com/Azure/actions

name: Build and deploy Razor Chirp App to Azure Web App - bdsagroup<no>chirprazor

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up .NET Core
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: '8.x'

      # Build Razor Chirp app
      - name: Build with dotnet
        run: dotnet build src/Chirp.Razor/ --configuration Release

      # Run tests for Razor Chirp app
      - name: Run tests
        run: dotnet test src/Chirp.Razor.Tests/ --configuration Release

      # Publish Razor Chirp app
      - name: dotnet publish
        run: dotnet publish src/Chirp.Razor/ -c Release -o ${{env.DOTNET_ROOT}}/myapp

      # Upload artifact for deployment job
      - name: Upload artifact for deployment job
        uses: actions/upload-artifact@v4
        with:
          name: .net-app
          path: ${{env.DOTNET_ROOT}}/myapp

  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: 'Production'
      url: ${{ steps.deploy-to-webapp.outputs.webapp-url }}
    permissions:
      id-token: write

    steps:
      - name: Download artifact from build job
        uses: actions/download-artifact@v4
        with:
          name: .net-app
      - name: Login to Azure
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZUREAPPSERVICE_CLIENTID_DEAC3154857D4B80ACF9E0F6EEF007C2 }}
          tenant-id: ${{ secrets.AZUREAPPSERVICE_TENANTID_8039889EB4474FBFBCA77A1CD949C33A }}
          subscription-id: ${{ secrets.AZUREAPPSERVICE_SUBSCRIPTIONID_CEEBCEAD87E24B9082900B5A51E4BEF5 }}

       # Deploy to the correct Web App (chirprazor)
      - name: Deploy to Azure Web App
        id: deploy-to-webapp
        uses: azure/webapps-deploy@v3
        with:
          app-name: 'bdsagroup8chirprazor'
          slot-name: 'Production'
          package: .
          
